# Application
APP_NAME=Smartbook
DEBUG=False
VERSION=0.1.0

# Database
DATABASE_URL=postgresql+asyncpg://smartbook:password@localhost:5432/smartbook
DATABASE_ECHO=False

# Security
SECRET_KEY=change-this-to-a-random-secret-key-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
MAGIC_LINK_TOKEN_BYTES=32

# OAuth2 - Google
GOOGLE_OAUTH_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=GOCSPX-your-client-secret
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:8000/api/auth/google/callback
FRONTEND_URL=http://localhost:3001
BACKEND_URL=http://localhost:8000

# JWT Tokens
JWT_SECRET_KEY=change-this-to-a-different-random-secret-key-for-jwt
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8000

# ROS1000
ROS1000_WSDL_URL=https://www.flussituristici.servizirl.it/...

# Notifications
SMTP_HOST=localhost
